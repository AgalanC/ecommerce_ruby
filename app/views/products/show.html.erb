<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <% if @product.image.attached? %>
      <img src="<%= url_for(@product.image) %>" alt="<%= @product.name %>" class="w-full h-64 object-cover">
    <% end %>
    <div class="p-4">
      <h1 class="text-3xl font-bold mb-2"><%= @product.name %></h1>
      <p class="text-gray-700 mb-4"><%= @product.description %></p>
      <p class="text-gray-900 font-bold text-xl mb-4"><%= number_to_currency(@product.price) %></p>
      <p class="text-gray-600"><%= @product.category.name %></p>
      <%= link_to 'Back to Products', products_path, class: 'inline-block mt-4 py-2 px-4 bg-black text-white rounded-lg hover:bg-gray-800' %>
    </div>
  </div>
</div>
