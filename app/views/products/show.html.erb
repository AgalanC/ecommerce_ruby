<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <% if @product.image.attached? %>
      <img src="<%= url_for(@product.image) %>" alt="<%= @product.name %>" class="w-full h-64 object-cover">
    <% end %>
    <div class="p-4">
      <h1 class="text-3xl font-bold mb-4 text-gray-800"><%= @product.name %></h1>
      <p class="text-gray-700 mb-4"><%= @product.description %></p>
      <p class="text-indigo-600 font-bold text-xl mb-4"><%= number_to_currency(@product.price) %></p>
      <p class="text-gray-600 mb-4"><%= @product.category.name %></p>
      <%= form_with url: add_item_cart_path, method: :post do %>
        <div class="mt-4 flex items-center">
          <%= number_field_tag :quantity, 1, min: 1, class: 'border rounded-lg p-2 w-20 mr-4 shadow-sm focus:ring focus:ring-indigo-300' %>
          <%= hidden_field_tag :product_id, @product.id %>
          <%= submit_tag 'Add to Cart', class: 'bg-indigo-600 text-white rounded-lg py-2 px-4 hover:bg-indigo-700 cursor-pointer' %>
        </div>
      <% end %>
      <%= link_to 'Back to Products', products_path, class: 'inline-block mt-4 py-2 px-4 bg-green-600 text-white rounded-lg hover:bg-green-700 cursor-pointer' %>
    </div>
  </div>
</div>
