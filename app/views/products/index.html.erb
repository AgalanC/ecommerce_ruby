<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center my-8">Our Products</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @products.each do |product| %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <% if product.image.attached? %>
          <img src="<%= url_for(product.image) %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
        <% end %>
        <div class="p-4">
          <h2 class="text-xl font-bold mb-2"><%= product.name %></h2>
          <p class="text-gray-700 mb-2"><%= product.description %></p>
          <p class="text-gray-900 font-bold"><%= number_to_currency(product.price) %></p>
          <%= link_to 'View Product', product_path(product), class: 'inline-block mt-4 py-2 px-4 bg-black text-white rounded-lg hover:bg-gray-800' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
