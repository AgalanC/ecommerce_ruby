<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center my-8">Shopping Cart</h1>
  <% if @cart.present? %>
    <table class="min-w-full bg-white">
      <thead>
        <tr>
          <th class="py-2">Product</th>
          <th class="py-2">Quantity</th>
          <th class="py-2">Price</th>
          <th class="py-2">Total</th>
          <th class="py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class="py-2"><%= product.name %></td>
            <td class="py-2"><%= @cart[product.id.to_s] %></td>
            <td class="py-2"><%= number_to_currency(product.price) %></td>
            <td class="py-2"><%= number_to_currency(product.price * @cart[product.id.to_s]) %></td>
            <td class="py-2">
              <%= button_to 'Remove', remove_item_cart_path(product_id: product.id), method: :post, class: 'bg-red-500 text-white rounded-lg py-2 px-4 hover:bg-red-700' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center">Your cart is empty.</p>
  <% end %>
</div>
